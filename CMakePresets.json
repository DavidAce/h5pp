    }
  ],
  "testPresets": [
    {
      "name": "default",
      "displayName": "Default setting for tests",
      "hidden": true,
      "output": {
        "verbosity": "default",
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "github-actions-default",
      "hidden": true,
      "output": {
        "verbosity": "verbose",
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release",
      "inherits": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "inherits": "default"
